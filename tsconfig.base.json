{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@_/models/*": ["libs/models/src/*"],
      "@_/ui": ["libs/ui/src/index.ts"],
      "@_/ui/*": ["libs/ui/src/*"],
      "@_/utils": ["libs/utils/src"],
      "@_/utils/*": ["libs/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
